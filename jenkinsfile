pipeline {
	agent any
	
	stages {
		stage('build'){
			steps {
				echo 'budowanie'
			}
			}
		stage('test') {
			steps {
				echo 'testowanie'
				sh 'npm test'
			}
		}
	}
		
	post {

		failure{
			emailtest attachLog: true,
			body: "${currentBuild.currentResult}: Job ${env.JOB_NAME} build ${env.BUILD_NUMBER}",
			to: 'mikixd4321@interia.pl',
			subject: "Build failed"
		}	
		always{
			echo 'zakonczono'
		}
		success{
			echo 'udalo sie'
			mail to:
		}
	}	
}
